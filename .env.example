# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-very-long-random-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/voice_agent
# For Docker deployment:
# DATABASE_URL=postgresql://postgres:postgres@db:5432/voice_agent

# Twilio Configuration
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# OpenRouter Configuration
OPENROUTER_API_KEY=your-openrouter-api-key

# API Security
API_KEY=your-api-key-for-admin-endpoints

# Frontend Configuration (for local development)
VITE_API_BASE_URL=http://localhost:5000/api
VITE_WS_URL=http://localhost:5000
VITE_API_KEY=your-api-key-for-frontend

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Sentry Configuration (optional)
SENTRY_DSN=https://xxxxxx@sentry.io/xxxxx

# Production Domain
DOMAIN=yourdomain.com
API_DOMAIN=api.yourdomain.com